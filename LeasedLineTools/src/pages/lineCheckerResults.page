<apex:page standardController="Opportunity" extensions="TalkTalkQuotes">
    <apex:form >
        <style>
            #filters { list-style: none; margin: 6px 0; padding: 0; }
            #filters li { list-style: none; margin: 0; padding: 0; }
        </style>
        <h1>Filters</h1>
        <ul id="filters">
            <li>Speed <select><option>All</option><option>10Mb /100Mb</option><option>20Mb /100Mb</option><option>30Mb /100Mb</option><option>40Mb /100Mb</option><option>50Mb /100Mb</option><option>100Mb /100Mb</option></select></li>
            <li></li>
            <li></li>
        </ul>
    <apex:pageBlock title="Talk Talk Quotes for {!opportunity.name} Opportunity">
        <apex:pageBlockSection columns="1">
            <apex:pageBlockTable value="{!products}" var="pitem">
                <apex:column headerValue="Product">
                    <apex:outputText value="{!pitem.Name}"/>
                </apex:column>
                <apex:column headerValue="Product ID">
                    <apex:outputText value="{!pitem.id}"/>
                </apex:column>
                <apex:column headerValue="Include On Quote">
                    <apex:inputCheckbox value="{!pitem.selected}"/>
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlockSection>
        <apex:pageBlockSection >
            <apex:commandButton action="{!addquote}" value="Add Quote"/>
        </apex:pageBlockSection>
    </apex:pageBlock>
        <apex:pageBlock title="Virgin Quotes">
        <apex:pageBlockSection columns="1">
           
        </apex:pageBlockSection>
